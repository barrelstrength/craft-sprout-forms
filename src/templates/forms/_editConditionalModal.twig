{% import "_includes/forms" as forms %}
{% import "sprout-base-fields/_includes/forms" as sproutFields %}

<div id="sprout-content">
    {% set conditionalTypeGroups = craft.sproutForms.prepareConditionalTypeSelection() %}

    <input type="hidden" name="formId" value="{{ conditional.formId }}">

    {% if conditional.id %}
        <input type="hidden" id="conditionalId" name="conditionalId" value="{{ conditional.id }}">
    {% endif %}

    {{ forms.lightswitchField({
        label: "Enabled"|t('sprout-forms'),
        name: 'enabled',
        on: conditional.enabled,
        first: true
    }) }}

    {{ forms.textField({
        label: "Conditional Name"|t('sprout-forms'),
        id: 'field-name',
        name: 'name',
        value: (conditional is defined ? conditional.name : null),
        errors: (conditional is defined ? conditional.getErrors('name') : null),
        required: true,
    }) }}

    <div class="field">
        <div class="heading">
            <label for="rules-section">{{ "Rules"|t('sprout-forms') }}</label>
            <div class="instructions"><p>{{ "The rules that will be applied to this field."|t('sprout-forms') }}</p>
            </div>
        </div>
    </div>

    {% namespace 'settings['~className(conditional)~']' %}
        {{ conditional.getSettingsHtml()|raw }}
    {% endnamespace %}

    <hr>

    <div class="field" id="settings-barrelstrength-sproutforms-conditionallogictypes-FieldRule-type-field">
        <div class="heading">
            <label id="settings-barrelstrength-sproutforms-conditionallogictypes-FieldRule-type-label" for="settings-barrelstrength-sproutforms-conditionallogictypes-FieldRule-type">{{ "Behavior"|t('sprout-forms') }}</label>
            <div class="instructions"><p>{{ "When the rules are met, this behavior will happen"|t('sprout-forms') }}</p>
            </div>
        </div>
    </div>

    <table id="sproutforms-behaviors" class="data behavior-table fullwidth">
        <thead>
        <tr>
            <th>{{ forms.select({
                    id: 'type',
                    name: 'behaviorAction',
                    hasOptgroups: true,
                    options: conditional.getBehaviorActionsAsOptions(),
                    value: conditional.behaviorAction,
                    errors: conditional.getErrors('behaviorAction') ?? null
                }) }}</th>
            <th>{{ forms.select({
                    id: 'type',
                    name: 'behaviorTarget',
                    hasOptgroups: true,
                    options: conditional.getFormFieldsAsOptions(),
                    value: conditional.behaviorTarget,
                    errors: conditional.getErrors('behaviorTarget') ?? null
                }) }}</th>
        </tr>
        </thead>
    </table>

    <hr>

    {{ forms.selectField({
        label: "Conditional Type <span class='info'>Create a new conditional if you need to update your conditional type. This value cannot be changed.</span>"|t('sprout-forms'),
        id: 'type',
        name: 'selectType',
        hasOptgroups: true,
        options: conditionalTypeGroups,
        value: className(conditional)|e('html'),
        errors: conditional.getErrors('type') ?? null,
        disabled: true
    }) }}

    {{ forms.textField({
        id: 'type',
        name: 'type',
        type: 'hidden',
        value: className(conditional),
        errors: conditional.getErrors('type') ?? null
    }) }}
</div>

{% js %}
    $(document).ready(function() {
    if (Craft.SproutFields != null) {
    Craft.SproutFields.initFields($(".field"));
    }
    });
{% endjs %}
